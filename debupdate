#!/bin/bash
echo "Welcome " $USER "@" $HOSTNAME && sleep 2
echo ":~$ uname"  && uname -a && sleep 3
echo ":~$ last"   && last -10 && sleep 2
echo ":~$ who -a" && who -a && sleep 3
sudo apt install speedtest-cli inxi
sudo apt update
sudo apt upgrade
sudo apt autoremove
echo "Connecting to ssh -t";
ssh -t localhost 'bash update && echo "Sending Reboot" && sudo reboot 1'
echo ":~$ speedtest" && speedtest --secure
inxi
echo "byah";
