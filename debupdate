#!/bin/bash
echo "Welcome " $USER "@" $HOSTNAME && sleep 2
sudo apt install speedtest-cli inxi
sudo apt update
sudo apt upgrade
sudo apt autoremove
echo ":~$ uname"  && uname -a && sleep 1
echo ":~$ last"   && last -10 && sleep 1
echo ":~$ who -a" && who -a && sleep 1
echo ":~$ speedtest" && speedtest --secure
inxi && uname -a && who -a
echo "byah";
